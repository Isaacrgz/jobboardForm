<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
                        http://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd"
    version="4.0">
    
    <lifecycle>
        <phase-listener>
            beans.lifecycle.DebuggerListener
        </phase-listener>
    </lifecycle>
    
    <application>
        <locale-config>
            <default-locale>en</default-locale> <!--Selecionamos el idioma por default-->
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name> <!-- Aqui ponemos la etiqueta que vincula -->
            <var>msgs</var>
        </resource-bundle>
        <message-bundle>jsf</message-bundle>
    </application>
    
</faces-config>
